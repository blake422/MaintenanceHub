# ===========================================
# DATABASE (Required)
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database
PGDATABASE=database
PGHOST=host
PGPORT=5432
PGUSER=user
PGPASSWORD=password

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
SESSION_SECRET=your-random-secret-string-here

# Replit OAuth (only needed if using Replit Auth)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc

# ===========================================
# STRIPE PAYMENTS (Required for billing)
# ===========================================
# Use test keys for development, live keys for production
TESTING_STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxx

# Frontend (prefix with VITE_ for client access)
VITE_STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxx
TESTING_VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxx

# ===========================================
# AI / OPENAI (Required for AI features)
# ===========================================
AI_INTEGRATIONS_OPENAI_API_KEY=sk-xxxxxxxxxxxx
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# OBJECT STORAGE (Required for file uploads)
# ===========================================
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id
PUBLIC_OBJECT_SEARCH_PATHS=public/
PRIVATE_OBJECT_DIR=.private/

# ===========================================
# EMAIL (Optional - for sending emails)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxx
# Optional: Custom from address (requires verified domain in Resend)
# Default uses Resend test domain: onboarding@resend.dev (only sends to your own email)
# RESEND_FROM_EMAIL=MaintenanceHub <info@yourdomain.com>

# ===========================================
# MISC (Optional)
# ===========================================
CUSTOM_DOMAIN=yourdomain.com
PORT=5000
NODE_ENV=development

# Replit-provided (auto-populated in Replit)
REPLIT_DOMAINS=your-repl.replit.app
REPLIT_DEV_DOMAIN=your-repl.replit.dev
